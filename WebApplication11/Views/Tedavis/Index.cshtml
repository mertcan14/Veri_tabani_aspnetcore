@model IEnumerable<WebApplication11.DataAccess.Tedavi>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tedavi İsmi
            </th>
            <th>
                Kullanılan İlaç
            </th>
            <th>
                Tedavi Süresi
            </th>
            <th>
                Hasta
            </th>
            <th>
                İlgilenen Doktor
            </th>
            <th>
                İlgilenen Hemsire
            </th>
            <th>
                Edit
            </th>
            <th>
                Detail
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TedaviIsmi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KullanılanIlaç)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TedaviSüresi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HastaTCNoNavigation.Adsoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IlgilenenDoktorNavigation.AdSoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IlgilenenHemsireNavigation.AdSoyad)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.HastaTCNo">Edit</a> 
            </td>
            <td>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.HastaTCNo">Details</a> 
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.HastaTCNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
