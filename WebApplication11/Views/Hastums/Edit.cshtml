@model WebApplication11.DataAccess.Hastum

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Hasta</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tcno" />
            <div class="form-group">
                Ad Soyad:
                <input asp-for="Adsoyad" class="form-control" />
                <span asp-validation-for="Adsoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                Cinsiyet:
                <input asp-for="Cinsiyet" class="form-control" />
                <span asp-validation-for="Cinsiyet" class="text-danger"></span>
            </div>
            <div class="form-group">
                Doğum Tarihi:
                <input asp-for="Dogumtarihi" class="form-control" />
                <span asp-validation-for="Dogumtarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                Meslek:
                <input asp-for="Meslek" class="form-control" />
                <span asp-validation-for="Meslek" class="text-danger"></span>
            </div>
            <div class="form-group">
                Önceden Geçirdiği Hastalıklar:
                <input asp-for="Öncedengeçirdiğihastalıklar" class="form-control" />
                <span asp-validation-for="Öncedengeçirdiğihastalıklar" class="text-danger"></span>
            </div>
            <div class="form-group">
                İlgilenen Doktor:
                <select asp-for="Ilgilenendoktor" class="form-control" asp-items="ViewBag.Ilgilenendoktor"></select>
                <span asp-validation-for="Ilgilenendoktor" class="text-danger"></span>
            </div>
            <div class="form-group">
                İlgilenen Hemsire:
                <select asp-for="Ilgilenenhemsire" class="form-control" asp-items="ViewBag.Ilgilenenhemsire"></select>
                <span asp-validation-for="Ilgilenenhemsire" class="text-danger"></span>
            </div>
            <div class="form-group">
                Adres:
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-light" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
