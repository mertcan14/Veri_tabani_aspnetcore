        <dt class = "col-sm-2">
            Tedavi Süresi:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TedaviSüresi)
        </dd>
        <dt class = "col-sm-2">
            Hasta T.C:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HastaTCNo)
        </dd>
        <dt class = "col-sm-2">
            İlgili Doktor T.C:
        </dt>
        <dd class = "col-sm-10">
