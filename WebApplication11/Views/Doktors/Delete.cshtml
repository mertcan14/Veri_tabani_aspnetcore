@model WebApplication11.DataAccess.Doktor

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3><b>Silmek istediğinize emin misiniz?</b></h3>
<div>
    <h4>Doktor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ad Soyad:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdSoyad)
        </dd>
        <dt class="col-sm-2">
            Cinsiyet:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cinsiyet)
        </dd>
        <dt class="col-sm-2">
            Doğum Tarihi:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DogumTarihi)
        </dd>
        <dt class="col-sm-2">
            Sifre:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sifre)
        </dd>
        <dt class="col-sm-2">
            Çalıştığı Brim:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CalıstığıBrimNavigation.BölümIsmi)
        </dd>
        <dt class="col-sm-2">
            İlgili Yönetici:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IlgilenenYöneticiNavigation.AdSoyad)
        </dd>
        <dt class="col-sm-2">
            T.C No:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TCNo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TCNo" />
        <input type="hidden" asp-for="AdSoyad" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-light" asp-action="Index">Back to List</a>
    </form>
</div>
