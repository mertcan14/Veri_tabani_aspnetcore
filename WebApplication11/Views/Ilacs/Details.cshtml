@model WebApplication11.DataAccess.Ilac

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Ilac</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            İlaç İsmi:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IlacIsmi)
        </dd>
        <dt class="col-sm-2">
            Etken İsmi:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EtkenIsmi)
