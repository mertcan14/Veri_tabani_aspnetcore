@model WebApplication11.DataAccess.Tedavi

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Tedavi</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tedavi İsmi:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TedaviIsmi)
        </dd>
        <dt class = "col-sm-2">
            Kullanılan İlaç:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KullanılanIlaç)
